{
  "name": "myprose",
  "version": "2.2.0",
  "description": "An AI-enhanced online writing studio with a suite of generative and assessment tools supporting the writing process from initial-phase writing to the completion of the final draft.",
  "type": "module",
  "private": true,
  "browser": "./index.html",
  "scripts": {
    "dev:vike": "npx tsx ./index.ts",
    "build:vike": "npx vike build",
    "preview:vike": "NODE_ENV=production npx tsx ./index.ts",
    "start": "npm run build:client && npx tsx src/server/index",
    "test": "vitest run",
    "coverage": "vitest run --coverage",
    "build:client": "vite build",
    "build:client:dev": "vite build --mode development",
    "build:server": "rollup -c",
    "build": "npm run build:client && npm run build:server",
    "dev:client": "vite",
    "dev:server": "npx tsx --trace-deprecation src/server/index",
    "dev": "npx concurrently \"npm run dev:server\" \"npm run watch:client\"",
    "watch:client": "NODE_ENV=development vite build --watch --mode development",
    "watch:server": "rollup -c --watch",
    "prettier": "npx prettier -c src/",
    "eslint": "npx eslint@^9 src",
    "precommit": "npm run prettier && npm run eslint && npm test",
    "gen:schema": "npx typescript-json-schema ./tsconfig.gen.json WritingTask --out ./src/lib/WritingTask.schema.json",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CMUEberlyCenter/eberly-docuscope-wa.git",
    "directory": "frontend"
  },
  "keywords": [
    "docuscope",
    "ontopic",
    "cmu",
    "Carnegie Mellon University",
    "english",
    "writing"
  ],
